{{ header }}

<div id="account-forgotten" class="navi">
    <div class="wrap">
        {% for breadcrumb in breadcrumbs %}
            <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
            {% if not loop.last %}<span></span>{% endif %}
        {% endfor %}
    </div>
</div>


<div id="checkout-cart" class="order-page">
    <div class="wrap">
        <h1>{{ page_title }}</h1>
        {% if errors %}
            {% for error in errors %}
                <div class="alert alert-warning">{{ error }}</div>
            {% endfor %}
        {% elseif empty %}
            <div class="alert alert-info">{{ empty }}</div>
        {% endif %}

        {% if cart %}
            <div id="custom-cart">
                {{ cart }}
            </div>
        {% endif %}

        {% if customer %}

        <form class="flex">

                {{ customer }}
                {{ shipping }}
                {{ payment }}
                {{ comment }}

        </form>

            {% if payment %}
                <div class="button" id="custom-control">
                    <input type="button" value="Оформить заказ" id="button-custom-order" data-loading-text="{{ text_loading }}" class="btn-cart-success"/>
                    <div class="clearfix"></div>
                </div>
            {% endif %}

            <div id="custom-confirm" style="display: none;"></div>



        {% endif %}



    </div>

</div>


