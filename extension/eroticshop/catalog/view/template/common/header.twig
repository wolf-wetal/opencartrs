<!DOCTYPE html>
<html dir="{{ direction }}" lang="{{ lang }}">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>{{ title }}</title>
  <base href="{{ base }}"/>
  {% if description %}
    <meta name="description" content="{{ description }}"/>
  {% endif %}
  {% if keywords %}
    <meta name="keywords" content="{{ keywords }}"/>
  {% endif %}

  <link href="{{ style_ext }}" type="text/css" rel="stylesheet"/>
  <link href="{{ style_1_ext }}" type="text/css" rel="stylesheet"/>
  <link href="{{ slick_ext }}" type="text/css" rel="stylesheet"/>
  <link href="{{ fancybox_min }}" type="text/css" rel="stylesheet"/>
  <script src="{{ jquery_3_4_1_js }}" type="text/javascript"></script>
  <script src="{{ slick_min }}" type="text/javascript"></script>
  <script src="{{ common_ext }}" type="text/javascript"></script>
  <script src="{{ common_cat }}" type="text/javascript"></script>
  <script src="{{ jquery_fancybox_min_js }}" type="text/javascript"></script>
{#  <script src="{{ login_popup_js }}" type="text/javascript"></script>#}
  <meta name="{{ check_category }}"/>
  {% if category_id %}
    {# Если это страница категории, загрузите необходимые скрипты #}
    <link href="{{ jquery_ui_css }}" type="text/css" rel="stylesheet"/>
    <script src="{{ jquery_ui_js }}" type="text/javascript"></script>
    <script src="{{ jquery_ui_touch_punch_min_js }}" type="text/javascript"></script>
  {% endif %}
  {% if scripts_cart %}
    <script src="{{ scripts_cart }}" type="text/javascript"></script>
  {% endif %}
  {% if scripts_checkout %}
    <script src="{{ scripts_checkout }}" type="text/javascript"></script>
  {% endif %}
  {% if adress_css %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="{{ adress_css }}" type="text/css" rel="stylesheet"/>
  {% endif %}

  {% for analytic in analytics %}
    {{ analytic }}
  {% endfor %}
</head>
<body {% if classbody %} {{ classbody }} {% endif %}>
  {{ menu }}
  <header class="header">
    <div class="wrap flex-old">
      <a class="menu-button"></a>
      <div class="logo">
        <a href="{{ home }}"><img src="/extension/eroticshop/catalog/view/img/logo.svg"></a>
      </div>
      <button class="catalog-button">Каталог</button>

      {{ search }}
      <a class="search-link"></a>
       <div class="header_cart_div" id="header-cart">{{ cart }}</div>
{#      <a href="#" class="cart">Корзина</a>#}
      {{ login_popup }}
      <a data-fancybox="popup4" data-src="#popup_login" href="javascript:;"><button class="login">Войти</button></a>
    </div>
  </header>
  {{ top_menu }}


