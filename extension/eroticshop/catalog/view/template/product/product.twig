    <div class="flex">
        {% if thumb or images %}
            <div class="photos">
                <div class="slider-for">

                    {% if thumb %}
                        <div class="item"><img src="{{ popup }}" title="{{ heading_title }}" alt="{{ heading_title }}"></div>
                    {% endif %}

                    {% if images %}
                        {% for image in images %}
                            <div class="item"><img src="{{ image.popup }}" title="{{ heading_title }}" alt="{{ heading_title }}"></div>
                       {% endfor %}
                    {% endif %}

                </div>

                <div class="slider-nav">

                    {% if thumb %}
                        <div class="item"><img src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}"></div>
                    {% endif %}

                    {% if images %}
                        {% for image in images %}
                            <div class="item"><img src="{{ image.thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}"></div>
                        {% endfor %}
                    {% endif %}

                </div>
            </div>
        {% endif %}

            <div class="info">
                <h1>{{ heading_title }}</h1>
                <div class="art">
                    Артикул: {{ model }}
    {#                    Артикул: U7212#}
                </div>
                <div class="text">
                    <p>{{ description }}</p>
                </div>
                    <div id="form-product" class="addsdadad">
        {#                <div class="color">#}
        {#                    Цвета: розовый, красный, черный.#}
        {#                </div>#}
                        <div class="flex">
                            {% if price %}
                                <div class="price">
                                    {% if not special %}
                                        <span class="price-new">{{ price }}</span>
                                    {% else %}
                                        <span class="price-new">{{ special }}</span> <span class="price-old">{{ price }}</span>
                                    {% endif %}
                                    {% if tax %}
                                        <span class="price-tax">{{ text_tax }} {{ tax }}</span>
                                    {% endif %}
                                </div>
                            {% endif %}

                            <form method="post" data-oc-toggle="ajax" data-oc-load="{{ cart }}" data-oc-target="#header-cart">
                                <button class="addToCartButton" type="submit" formaction="{{ add_to_cart }}" name="product_{{ product_id }}"  data-bs-toggle="tooltip" data-name="{{ name }}" data-image="{{ thumb }}" data-sku="{{ sku }}">В корзину</button>
                                <input type="hidden" name="product_id" value="{{ product_id }}"/> <input type="hidden" name="quantity" value="1"/>
                            </form>
                         </div>
                    </div>
            </div>

    </div>
    <div class="bottom-blocks">
